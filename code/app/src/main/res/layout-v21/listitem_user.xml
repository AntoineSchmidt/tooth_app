<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/userRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/userIconImageView"
        android:layout_width="@dimen/icon_listitem"
        android:layout_height="@dimen/icon_listitem"
        android:layout_margin="@dimen/default_view_margin"
        android:background="@drawable/bg_listitem_icon"
        android:padding="@dimen/padding_small"
        android:scaleType="fitXY"
        android:src="@drawable/user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_listitem_vertical"
        android:paddingRight="@dimen/default_view_margin"
        android:paddingTop="@dimen/padding_listitem_vertical">

        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/textview_textcolor_default"
            android:textSize="@dimen/textsize_listitem_primary" />

        <TextView
            android:id="@+id/userRoleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:singleLine="true"
            android:textColor="@color/textview_textcolor_default"
            android:textSize="@dimen/textsize_listitem_secondary" />

    </LinearLayout>

    <!-- edit view -->
    <ImageView
        android:id="@+id/userEditView"
        android:layout_width="@dimen/icon_listitem"
        android:layout_height="@dimen/icon_listitem"
        android:layout_marginBottom="@dimen/default_view_margin"
        android:layout_marginRight="@dimen/default_view_margin"
        android:layout_marginTop="@dimen/default_view_margin"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:padding="@dimen/padding_small"
        android:scaleType="fitXY"
        android:src="@drawable/dots" />

</LinearLayout>
